{
  "compilerOptions": {
      "types": ["dotenv/config","jest", "node"],
      "target": "ES2022",
      "module": "CommonJS",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "jsxImportSource": "hono/jsx",
      "noImplicitAny": false,
      "moduleResolution": "Node",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.cjs",
    "./**/*.test.ts",
    "./**/*.test.d.ts",
  ]
}